<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="@android:color/holo_blue_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="240dp"
        android:layout_height="250dp"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/llResult" />


    <TextView
        android:text="@string/tuIndice"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:id="@+id/tvResultTexto"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        android:textColor="@android:color/black"
        tools:textColor="@android:color/black" />

    <TextView
        android:text="25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="5dp"
        android:id="@+id/tvResultIMC"
        android:textSize="50sp"
        android:layout_below="@+id/tvResultTexto"
        android:layout_alignLeft="@+id/tvResultTexto"
        android:layout_alignStart="@+id/tvResultTexto"
        android:textStyle="normal|bold" />

    <TextView
        android:text="@string/estadoDe"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/tvEstadoTexto"
        android:textSize="24sp"

        android:layout_toRightOf="@+id/llResult"

        android:layout_marginRight="20dp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Normalidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/tvEstadoIMC"
        android:textSize="50sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/tvEstadoTexto"
        android:layout_toRightOf="@+id/llResult"
        android:layout_marginLeft="30dp"
         />

    <Button
        android:text="@string/verRangos"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/bVerRangos"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:text="HOME"
        android:layout_width="150dp"
        android:id="@+id/bHome"
        android:layout_height="50dp" />

</RelativeLayout>